{
  "manifest_version": 3,
  "name": "Obsidian Web Agent",
  "version": "2.1.0",
  "description": "Your intelligent Obsidian assistant for the web - capture content from any website into your vault",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://www.goodreads.com/*",
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "https://*/*",
    "http://*/*",
    "http://127.0.0.1:*/*",
    "http://localhost:*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/obsidian-web-agent-logo.png",
      "48": "icons/obsidian-web-agent-logo.png",
      "128": "icons/obsidian-web-agent-logo.png"
    }
  },
  "icons": {
    "16": "icons/obsidian-web-agent-logo.png",
    "48": "icons/obsidian-web-agent-logo.png",
    "128": "icons/obsidian-web-agent-logo.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.goodreads.com/book/show/*"],
      "js": ["flows/goodreads/content.js"]
    },
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://www.youtube.com/playlist*",
        "https://www.youtube.com/shorts/*",
        "https://youtu.be/*"
      ],
      "js": ["flows/youtube/content.js"]
    }
  ],
  "options_page": "options.html"
}
